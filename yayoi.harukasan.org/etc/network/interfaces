# NAT for lxc
auto lxc-bridge-nat
iface lxc-bridge-nat inet static
    bridge_ports none
    bridge_fd 0
    bridge_maxwait 0
    address 10.20.80.1
    netmask 255.255.252.0
    dns-nameservers 10.20.80.11
    dns-search uuuu
